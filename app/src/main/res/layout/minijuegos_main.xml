<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/img1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/cofre"/>
        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:layout_alignBottom="@+id/img1"
            android:layout_alignLeft="@+id/img1"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="-15dp"
            android:text="Cofres"
            android:textSize="18dp"
            android:background="@drawable/shape_bordes_redondos"/>

        <ImageButton
            android:id="@+id/img2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:src="@drawable/cofre"/>
        <TextView
            android:id="@+id/titulo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:layout_alignBottom="@+id/img2"
            android:layout_alignLeft="@+id/img2"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="-15dp"
            android:text="Preguntas"
            android:textSize="18dp"
            android:background="@drawable/shape_bordes_redondos"/>

        <ImageButton
            android:id="@+id/img3"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/img1"
            android:src="@drawable/cofre"/>
        <TextView
            android:id="@+id/titulo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:layout_alignBottom="@+id/img3"
            android:layout_alignLeft="@+id/img3"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="-15dp"
            android:text="Casino"
            android:textSize="18dp"
            android:background="@drawable/shape_bordes_redondos"/>
</RelativeLayout>